color-primary = #E5C611
color-primary--lighter = lighten(color-primary, 20%)
color-primary--darker = darken(color-primary, 20%)
color-heading = #666
color-white   = #fff
color-gray--darker = #333
color-gray--lighter = #BBB
color-secondary = #E67E22
color-secondary--lighter = lighten(color-secondary, 20%)
color-secondary--darker = darken(color-secondary, 20%)
color-danger = #d14233
color-danger--lighter = lighten(color-danger, 20%)
color-danger--darker = darken(color-danger, 20%)


font--normal = 16px
font--large = 20px
font--larger = 24px

.font--larger
  font-size: font--larger

.font--large
  font-size: font--large

.font--normal
  font-size: font--normal


.text--right
  text-align: right

body
  background-color: color-gray--lighter

ul
  list-style: none
  -webkit-padding-start: 0

h2
  margin: 0

a
  text-decoration: none
  color: color-heading

.color-primary
  color: color-primary

.color-primary--lighter
  color: color-primary--lighter

.color-gray--darker
  color: color-gray--darker

.btn
  border: 0
  padding: 20px
  color: color-white
  transition: .3s all ease
  font-weight: bold
  text-align: center

.btn--primary
  background-color: color-primary
  &:hover
    background-color: color-primary--darker
    transition: .3s all ease
  &.active
    background-color: color-primary--lighter
    &:hover
      background-color: color-primary--darker
      transition: .3s all ease

.btn--secondary
  background-color: color-secondary
  &:hover
    background-color: color-secondary--darker
    transition: .3s all ease
  &.active
    background-color: color-secondary--lighter
    &:hover
      background-color: color-secondary--darker
      transition: .3s all ease

.btn--danger
  background-color: color-danger
  &:hover
    background-color: color-danger--darker
    transition: .3s all ease
  &.active
    background-color: color-danger--lighter
    &:hover
      background-color: color-danger--darker
      transition: .3s all ease

input[type="text"]
  color: color-gray--darker
  border: 1px solid color-gray--lighter
  font-size: font--larger
  width: 100%

.border--lighter
  border: 1px solid @color-gray--lighter

.media

.media__img img
  width: 100%

.media__body--top
  vertical-align: top

.hidden
  visibility: hidden

.row
  width: 100%
  max-width: 960px
  margin: 0 auto
  padding: 5px 0


[class*="col-"]
  box-sizing: border-box
  display: inline-block
  padding-right: 20px
  vertical-align: middle

.row [class*="col-"]:last-child
  padding-right: 0

.col-1-2
  width: 50%

.col-omega
  padding-right: 0

.no-pad
  padding: 0

.col-1-1
  width: 100%

.col-1-2
  width: 50%

.col-1-3
  width: 33.3%

.col-1-4
  width: 25%

.col-1-8
  width: 12.5%

.push-1-4
  margin-left: 25%

.col-7-8
  width: 87.5%

.push-down--1
  margin-top: 1%

.push-down--2
  margin-top: 2%

.push-down--3
  margin-top: 3%

.truncate
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;